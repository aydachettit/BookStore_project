
@model IEnumerable<BookStore_project.Models.Shipment.ShipmentIndexViewModel>

@{
    ViewData["Title"] = "Index Shipment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index Shipment</h1>
<nav aria-label="breadcrumb">
     <ol class="breadcrumb">
     <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
     <li class="breadcrumb-item active" aria-current="page">Shipment List</li>
     </ol>
</nav><br />
<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="SearchPage">Search Page</a>
</p>
<table class="table table-hover">
    <thead>
        <tr class="table-success">
            <th>
                ID
            </th>
            <th>
                BillID
            </th>
            <th>
                Customer
            </th>
            <th>
                Shipment Status
            </th>
            <th>
                Action
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BillID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shipment_Status_ID)
            </td>
            <td>
                <a class="text-primary" asp-action="Edit" asp-route-id="@item.ID"><i class="fas fa-edit"></i> Edit</a>
@*                <a asp-action="Detail" asp-route-id="@item.ID">Detail</a>
*@              <a class="text-danger" asp-action="Delete" asp-route-id="@item.ID"><i class="far fa-trash"></i> Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
