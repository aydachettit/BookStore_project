@model BookStore_project.Models.Category.CategoryDetailViewModel

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detail</h1>

<div class="col-md-12 grid-margin grid-margin-md-0">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Category List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Category Details</li>
                </ol>
            </nav><br /><br />
            <div class="wrap d-flex justify-content-md-start justify-content-sm-center flex-wrap">
                <div class="wrap align-content-center ml-10">
                    <p class="font-weight-normal"> Category Name: @Model.Name </p>
                    <br />
                </div>
            </div>

            <table class="table table-hover">
        <thead>
        <tr class="table-success">
            <th>
                Name
            </th>
            <th>
               Public date
            </th>
            <th>
               Price
            </th>
            <th>
               Amount
            </th>
            <th>
               Image
            </th>
            <th>
                Author
            </th>
            <th>
                Publisher
            </th>
        </tr>
    </thead>

    <tbody>
                    @foreach (var item in Model.books)
                    {
                                    <tr>
                                        <td>
                                @Html.DisplayFor(modelItem =>item.Name)
                                        </td>
                                        <td>
                                @item.PublicDate.ToShortDateString()
                                        </td>
                                        <td>
                                @Html.DisplayFor(modelItem => item.Price)
                                        </td>
                                        <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                                                </td>
                                                <td>
                                    <img src="@Html.DisplayFor(modelItem => item.Image_URL)" >
                                                </td>
                                                <td>
                                @Html.DisplayFor(modelItem => item.Author.Name)
                                                </td>
                                                <td>
                                @Html.DisplayFor(modelItem => item.Publisher.Name)
                                                </td>
                                    </tr>
                    }
    </tbody>
    </table>
        </div>
    </div>
</div>
