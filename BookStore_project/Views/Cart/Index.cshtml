@using BookStore_project.Models.Cart;
@model IEnumerable<CartViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="single_top">
  <div class="single_grid">
    <div id="cartContent">
      <table class="table">
        <thead>
          <tr>
            <td>STT</td>
            <td>Tên sản phẩm</td>
            <td>Hình ảnh</td>
            <td>Giá</td>
            <td>Số lượng</td>
            <td>Thành tiền</td>
            <td>#</td>
          </tr>
          @foreach (var item in Model)
          {
              <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><img src="@item.ImageURL" /></td>      
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@item.TotalPrice</td>
                <td>#</td>
              </tr>
          }
        </thead>
        <tbody id="cartBody"></tbody>
      </table>
      <button class="btn btn-success" id="btnContinue">Tiếp tục mua hàng</button>
      <button class="btn btn-danger" id="btnDeleteAll">Xóa giỏ hàng</button>
      <a class="btn btn-primary" id="btnCheckout" asp-action="Checkout" asp-route-id="">Thanh toán</a>
      <div class="pull-right">
        Tổng tiền: <span id="lblTotalOrder"></span>
      </div>
    </div>

    <div class="clearfix"> </div>
  </div>

</div>

