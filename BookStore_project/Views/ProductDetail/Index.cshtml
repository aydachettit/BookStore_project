@{
}

@model BookStore_project.Models.ProductDetail.ProductDetailViewModel



<div class="container">
    <div class="row">
        <div class="col-md-5 book_picture d-flex justify-content-center align-items-center">
            <img src="~/img/books/1.jpg" />
        </div>
        <div class="col-md-6">
            <h1>@Model.ProductTitle</h1>
            <p><strong>Author: @Model.AuthorName</strong></p>
            <p>@Model.ProductDescription</p>
            <p><strong>Price: @Model.ProductPrice</strong></p>
            <form asp-controller="Cart" asp-action="AddToCart" method="get">
                <input type="hidden" name="ID" value="@Model.ID"/>
                Số Lượng: 
                <input type="number" name="number" value="1" />    <br /><br />
                <input type="submit" value="Add To Cart" class="btn btn-primary"  />
            </form>
        </div>
    </div>
</div>
