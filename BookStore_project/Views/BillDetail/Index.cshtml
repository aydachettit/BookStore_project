@model IEnumerable<BookStore_project.Models.BillDetail.BillDetailIndexViewModel>


<div class="card">
    <div class="card-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">All Employee</li>
            </ol>
        </nav>
        <div class="row">
            <div class="col-md-12 table-responsive-md">
                <a class="btn btn-xs btn-outline-success float-md-right mb-3" asp-action="Create"> New Employee</a>
                <table class="table table-striped table-info">
                    <thead>
                        <tr>
                            <th>Bill Detail ID</th>
                            <th>Amount</th>
                            <th>Price</th>
                           
                            <th class="text-warning">Actions</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Bill_Detail_ID">
                                      
                                    </a>
                                </td>
                                <td>@item.Amount</td>
                                <td>@item.Price</td>
                              
                                <td>
                                    <a class="text-primary" asp-action="Edit" asp-route-id="@item.Bill_Detail_ID">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a class="text-success" asp-action="Detail" asp-route-id="@item.Bill_Detail_ID">
                                        <i class="fas fa-bars"></i> Detail
                                    </a>
                                    <a class="text-danger" asp-action="Delete" asp-route-id="@item.Bill_Detail_ID">
                                        <i class="far fa-trash-alt"></i> Delete
                                    </a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>