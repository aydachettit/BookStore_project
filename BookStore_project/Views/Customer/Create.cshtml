@using BookStore_project.Models.Customer;
@using Entity

@model CustomerCreateViewModel

@{
    ViewData["Title"] = "Create Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Book</h1>
<nav aria-label="breadcrumb">
     <ol class="breadcrumb">
     <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
     <li class="breadcrumb-item"><a asp-action="Index">Customer List</a></li>
     <li class="breadcrumb-item active" aria-current="page">Customer Create</li>
     </ol>
</nav><br />
@*<hr />*@

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <fieldset>
                    <label asp-for="@Model.Name" class="control-label"></label>
                    <input class="form-control" asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </fieldset>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Gender" class="control-label"></label>
                <select class="form-select" asp-for="@Model.Gender">
                    <option selected>Choose Gender</option>
                    <option>Male</option>
                    <option>Female</option>
                </select>
            </div>
            <div class="form-group">
                <fieldset>
                    <label asp-for="@Model.Phone" class="control-label"></label>
                    <input class="form-control" asp-for="@Model.Phone" class="form-control" />
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                </fieldset>
            </div>

            <div class="form-group">
                <fieldset>
                    <label asp-for="@Model.Address" class="control-label"></label>
                    <input class="form-control" asp-for="@Model.Address" class="form-control" />
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </fieldset>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}