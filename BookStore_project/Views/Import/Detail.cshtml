@model BookStore_project.Models.Import.ImportDetailViewModel

@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detail</h1>

<div>
    <h4>ImportDetailViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.date_import)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.date_import)
        </dd>
        <dt class = "col-sm-2">
           Total Money
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        
    </dl>
    <table class="table table-hover">
        <thead>
            <tr class="table-success">
                <th>
                    Id
                </th>
                <th>
                    Book Name
                </th>
                <th>
                   Amount
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.lod)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem =>item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.book_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.book_amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.book_price)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
